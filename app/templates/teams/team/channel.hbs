<!-- Channel -->
<ChannelContainer @channel={{this.model}} as |messages|>

  <ChannelHeader class="bg-grey" @title={{this.model.name}} @description={{this.model.description}} />
  <!-- Channel Message List -->
  <div class="py-4 flex-1 overflow-y-scroll channel-messages-list" role="list">
    {{#each messages as |msg|}}
      <ChannelMessage @message={{msg}}/>
    {{/each}}
  </div>

  <ChannelFooter />

</ChannelContainer>